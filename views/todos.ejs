<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My To Do List</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>My To Do List</h1>
  <a href="/todos/new"><button>Add To Do</button></a>
  <% if (todos && todos.length > 0) { %>
    <ul>
      <% todos.forEach(function(todo) { %>
        <li>
          <%= todo.title %>
          <a href="/todos/<%= todo.id %>/edit"><button>Edit</button></a>
          <form action="/todos/<%= todo.id %>/delete" method="POST" style="display:inline;">
            <button type="submit" onclick="return confirm('Are you sure you want to delete this?')">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No to-dos registered.</p>
  <% } %>
  <a href="/">Back to Home</a>
</body>
</html> 